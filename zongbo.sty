%% Sequence
\newcommand{\seq}[2][n]{\@emath{ {#2}_1, {#2}_2, \dots, {#2}_{#1} }}
\newcommand{\seqlr}[3]{\@emath{ {#3}_{#1}, {#3}_{#1+1}, \dots, {#3}_{#2} }}
\def\prodn{\@emath{\prod_{i=1}^{n}}}
\def\sumn{\@emath{\sum_{i=1}^{n}}}
\newcommand{\prodlr}[3][i]{\@emath{\prod_{#1=#2}^{#3}}}
\newcommand{\sumlr}[3][i]{\@emath{\sum_{#1=#2}^{#3}}}

%% Acronym for Greek letters
\def\lda{\lambda}
\def\vep{\varepsilon}
\def\ep{\epsilon}

%% Name of algorithm
\newcommand{\algname}[1]{\@emath{\textsc{#1}}}

%% Parentheses and more
%\newcommand{\lrp}[1]{\@emath{\left( #1 \right)}}   % ( )
%\newcommand{\lrb}[1]{\@emath{\lbrace #1 \rbrace}}  % { }
%\newcommand{\lrs}[1]{\@emath{\left[ #1 \right]}}   % [ ]
\DeclarePairedDelimiter{\lrp}{(}{)}
\DeclarePairedDelimiter{\lrb}{\lbrace}{\rbrace}
\DeclarePairedDelimiter{\lrs}{[}{]}
\let\@lrp\lrp
\let\@lrb\lrb
\let\@lrs\lrs
\def\lrp{\@ifstar{\@lrp}{\@lrp*}}
\def\lrb{\@ifstar{\@lrb}{\@lrb*}}
\def\lrs{\@ifstar{\@lrs}{\@lrs*}}

%% Probabilistic
\newcommand\@E[1]{\@emath{\mathbb{E}\lrs{#1}}}
\newcommand\@Es[1]{\@emath{\mathbb{E}\lrs*{#1}}}
\newcommand\@Var[1]{\@emath{\mathbf{Var}\lrs{#1}}}
\newcommand\@Vars[1]{\@emath{\mathbf{Var}\lrs*{#1}}}
\newcommand\@Prob[1]{\@emath{\Pr\lrs{#1}}}
\newcommand\@Probs[1]{\@emath{\Pr\lrs*{#1}}}
\def\E{\@ifstar{\@Es}{\@E}}
\def\Var{\@ifstar{\@Vars}{\@Var}}
\def\Prob{\@ifstar{\@Probs}{\@Prob}}

